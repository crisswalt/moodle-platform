# Configuración de Moodle para Dokploy

# Dominio principal (Dokploy configurará Traefik automáticamente)
MOODLE_DOMAIN=moodle.tu-dominio.com

# Moodle Release (Git branch/tag)
MOODLE_RELEASE=MOODLE_500_STABLE

# Database Configuration
DB_TYPE=mariadb
DB_NAME=moodle
DB_USER=moodle
DB_PASSWORD=moodle_secure_password_2024
MYSQL_ROOT_PASSWORD=root_secure_password_2024

# Moodle Configuration (usar HTTPS con Dokploy)
MOODLE_URL=https://moodle.tu-dominio.com
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASSWORD=Admin123!
MOODLE_ADMIN_EMAIL=admin@tu-dominio.com
MOODLE_FULL_NAME=Mi Plataforma Moodle
MOODLE_SHORT_NAME=MiMoodle

# PHP Configuration
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M
PHP_MAX_INPUT_VARS=5000

# Timezone
TZ=America/Santiago

# Debug mode (solo desarrollo)
MOODLE_DEBUG=false

# Email Configuration (opcional)
MOODLE_SMTP_HOST=smtp.tu-dominio.com
MOODLE_SMTP_PORT=587
MOODLE_SMTP_USER=noreply@tu-dominio.com
MOODLE_SMTP_PASSWORD=tu_smtp_password
MOODLE_SMTP_SECURITY=tls