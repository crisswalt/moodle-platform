# Moodle Docker Configuration

# Moodle Release (Git branch/tag)
MOODLE_RELEASE=MOODLE_500_STABLE

# Database Configuration
DB_TYPE=mariadb
DB_HOST=db
DB_PORT=3306
DB_NAME=moodle
DB_USER=moodle
DB_PASSWORD=moodle_secure_password_2024
MYSQL_ROOT_PASSWORD=root_secure_password_2024

# Moodle Configuration
MOODLE_URL=http://localhost:8080
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASSWORD=Admin123!
MOODLE_ADMIN_EMAIL=admin@example.com
MOODLE_FULL_NAME=Moodle Learning Platform
MOODLE_SHORT_NAME=Moodle

# Data Directory (inside container)
MOODLE_DATA_PATH=/var/www/moodledata

# SSL Configuration (optional)
MOODLE_SSL_ENABLE=false

# Email Configuration (optional)
MOODLE_SMTP_HOST=
MOODLE_SMTP_PORT=587
MOODLE_SMTP_USER=
MOODLE_SMTP_PASSWORD=
MOODLE_SMTP_SECURITY=tls

# PHP Configuration
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M
PHP_MAX_INPUT_VARS=5000

# Redis Configuration (optional for caching)
REDIS_HOST=redis
REDIS_PORT=6379

# Timezone
TZ=America/Santiago

# Debug mode (development only)
MOODLE_DEBUG=false